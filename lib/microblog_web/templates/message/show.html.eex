<h2>Show Message</h2>

<ul>

  <li>
    <strong>User:</strong>
    <%= @message.user %>
  </li>

  <li>
    <strong>Post:</strong>
    <%= @message.post %>
  </li>

  <li>
    <strong>Hashtags:</strong>
    <%= @message.hashtags %>
  </li>

  <li>
    <strong>Mentions:</strong>
    <%= @message.mentions %>
  </li>

</ul>

<span><%= link "Edit", to: message_path(@conn, :edit, @message) %></span>
<span><%= link "Back", to: message_path(@conn, :index) %></span>
